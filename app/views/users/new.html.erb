<h1>Sign Up</h1>

<form accept-charset="UTF-8" action="/users" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>Username</label>
  <input name="user[name]" type="text" placeholder="Username" />
  <label>Email</label>
  <input name="user[email]" type="text" placeholder="Email" />
  <label>Password</label>
  <input name="user[password]" type="password" placeholder="Pasword"/>
  <input name="submit" type="submit" value="Process">
</form>